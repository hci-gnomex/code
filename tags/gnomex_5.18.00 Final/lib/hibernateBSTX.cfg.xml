<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN" "http://hibernate.sourceforge.net/hibernate-configuration.dtd">
<hibernate-configuration>
    <session-factory name="sessions/BSTX_FACTORY">
    	<property name="show_sql">false</property>
        <property name="use_outer_join">true</property>
        <property name="query.imports">hci.bstx.model</property>
        <property name="jdbc.use_streams_for_binary">true</property>
        <property name="connection.datasource">jdbc/BST</property>
        <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
        <!-- ENTER ALL MAPPING FILES HERE -->
        <mapping file="applications/hciEnv/SchemaBSTX.hbm.xml"/>
        <mapping file="applications/hciEnv/SchemaAdhoc.hbm.xml"/>
        <mapping file="applications/hciEnv/SchemaMetaAttribute.hbm.xml"/>
        <mapping file="applications/hciEnv/SchemaMetaAttributePath.hbm.xml"/>
        <mapping file="applications/hciEnv/SchemaPath.hbm.xml"/>
		    <mapping file="applications/hciEnv/SchemaPathReportAttr.hbm.xml"/>
        <mapping file="applications/hciEnv/SchemaAssoc.hbm.xml"/>
        <mapping file="applications/hciEnv/SchemaResourceReference.hbm.xml"/>
        <mapping file="applications/hciEnv/SchemaPersonResearch.hbm.xml"/>
        <mapping file="applications/hciEnv/SchemaTumorReg.hbm.xml"/>
    </session-factory>
</hibernate-configuration>