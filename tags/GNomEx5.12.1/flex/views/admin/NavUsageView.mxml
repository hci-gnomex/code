						<mx:horizontalAxis>
							<mx:CategoryAxis 
								dataProvider="{getUsageData.lastResult.SummaryDiskSpaceByYear.Entry}" 
								categoryField="@label"
								/>
						</mx:horizontalAxis>
						<mx:series>
							<mx:ColumnSeries 
								yField="@diskSpaceGB" 
								displayName="Disk space (GB)"
								/>
						</mx:series>
					</mx:ColumnChart>
				</mx:VBox>
				
				<mx:VBox id="diskSpaceByTypePanel" width="100%" height="100%" styleName="form" 
