					  <mx:RadioButton label="All" groupName="radiogroupAsOf" id="all" click="changeAsOf()"/>
					  <mx:Spacer width="100%"/>
					  <mx:Button label="Print" click="printChart()" icon="@Embed(source='../../assets/printer.png')"/>
