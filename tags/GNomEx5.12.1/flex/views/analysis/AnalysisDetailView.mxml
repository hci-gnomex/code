				getAnalysisTypeName();
				getAnalysisProtocolName();
				getOrganismName();
				getGenomeBuildName();
				getVisibilityName();
				
				var sequenceLanes:int = 0;
				for each (var experimentItem:Object in analysis.experimentItems.AnalysisExperimentItem..SequenceLane) {
