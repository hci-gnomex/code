			if (setupView.requestTypeGroup.selectedValue == 'SOLEXA') {
				this.currentState = 'SolexaBaseState';
				this.sampleSetupView.currentState = 'SolexaSetupState';
				this.samplesView.currentState = 'SolexaSamplesState';	
