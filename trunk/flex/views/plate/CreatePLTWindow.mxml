<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
				width="314" height="270" 
				creationComplete="{init()}"
				xmlns:util="views.util.*" 
				showCloseButton="true" close="exitRequest()"
				title="{'Create PLT Files for run ' + instrumentRun.idRun}">
	

	
	
	
	<mx:Script>
		<![CDATA[
			
			import hci.flex.controls.DropdownLabel;
			import hci.flex.dictionary.DictionaryEditor;
			import hci.flex.dictionary.DictionaryEvent;
			
			import mx.collections.XMLListCollection;
			import mx.controls.Alert;
			import mx.controls.listClasses.ListBase;
			import mx.core.DragSource;
			import mx.core.UIComponent;
			import mx.events.CloseEvent;
			import mx.events.CollectionEvent;
			import mx.events.CollectionEventKind;
			import mx.events.DragEvent;
			import mx.events.ListEvent;
			import mx.events.PropertyChangeEvent;
			import mx.managers.DragManager;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			import views.util.PromptXMLListCollection;
			
			
			[Bindable]
			public var instrumentRun:Object;
			[Bindable]
			public var plate:Object;
      
			
			
			private function init():void {
				
			}	
			
			
      protected function exitRequest():void {
        
        cancel();
        
      }
      
			protected function cancelRequest():void {
				
					Alert.show("Are you sure you want to cancel?",
						"Confirm",
						(Alert.YES | Alert.NO), this, 
						onPromptToCancel,						
						parentApplication.iconWarning);
				
			}
			
			private function onPromptToCancel(event:CloseEvent):void {
				if (event.detail == Alert.YES) {
					cancel();
				}
			}
			
			protected function cancel():void {
				PopUpManager.removePopUp(this);
			}
			
		]]> 
	</mx:Script>
	
  
	<mx:VBox width="100%" height="100%" verticalGap="0">
		<mx:HDividedBox height="100%" width="100%" >
			<mx:VBox height="100%" width="200" styleName="panelBox">
				<mx:Canvas label="infoBox" width="100%" height="100%">
					<mx:HDividedBox width="100%" height="100%" 
									paddingBottom="4" 
									paddingLeft="4" 
									paddingRight="4" 
									paddingTop="4">
						<mx:VBox width="230" height="100%">
							
							<mx:HBox backgroundColor="#FEFCFC" 
									 horizontalAlign="center" 
									 verticalAlign="middle" 
									 height="26" width="100%">
								
								<mx:Text text="Sealed:" 
										 height="15" 
										 paddingTop="0" 
										 textAlign="center"/>
								
								<mx:ComboBox id="sealedSelection" 
											 dataProvider="{}" 
											 labelField="@name" 
											 toolTip="Select Lab" 
											  width="170">
								</mx:ComboBox>
							
							</mx:HBox>
							
							<mx:HBox width="100%" height="100%" 
                       backgroundColor="#FEFCFC">						
							</mx:HBox>
						
						</mx:VBox>
					</mx:HDividedBox>
				</mx:Canvas>
			</mx:VBox>	
		</mx:HDividedBox>
	</mx:VBox>
	
	<mx:ControlBar horizontalAlign="right" width="100%">
	    <mx:HBox width="100%" 
				 horizontalAlign="right" 
				 verticalAlign="middle">
	    <mx:Button label="Creat PLT" 
				   id="saveButton" 
				     />
	    <mx:Button label="Cancel" 
				   click="cancelRequest()" 
				   id="cancelButton"/>
	    </mx:HBox>
	</mx:ControlBar>
	
</mx:TitleWindow>
