			<mx:VBox id="billingBox" verticalGap="6" label="Billing" width="100%" height="95%">
				<mx:HBox verticalGap="0" horizontalGap="0" verticalAlign="middle">
					<db:NotificationTab id="billingTab" notificationState="4" />
				</mx:HBox>
			</mx:VBox>
		</mx:TabNavigator>
