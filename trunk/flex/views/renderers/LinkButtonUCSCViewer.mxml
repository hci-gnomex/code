<?xml version="1.0" encoding="utf-8"?>
<mx:LinkButton xmlns:mx="http://www.adobe.com/2006/mxml" 
	label=""
	click="clickLink(event)" textDecoration="underline" color="#5050E3" textAlign="left" icon="@Embed(source='../../assets/ucscFavicon.png')"> 
	
	
    <mx:Script> 
    <![CDATA[   
        
        import mx.controls.dataGridClasses.DataGridListData; 
        
        private var columnIndex:int; 
        
        private function init():void {
        	if (data.hasOwnProperty("@UCSCViewer")  && data.@UCSCViewer == 'Y') {
        		visible = true;
        	} else {
        		visible = false;
        	}
        }
        
        private function clickLink(event:MouseEvent):void{ 
			var txt:String = data.@idAnalysisFileString;
			//			var alert:Alert = Alert.show(txt, "[LinkButtonURLLink clickLink]");
			//			alert.mx_internal::alertForm.mx_internal::textField.htmlText =txt;
			
			if (data != null) {
				if (data.hasOwnProperty("@isSupportedDataTrack") && data.@isSupportedDataTrack == 'Y') {
					//					txt = data.@fileName;
					//					alert = Alert.show(txt, "calling createURLLinks:");
					//					alert.mx_internal::alertForm.mx_internal::textField.htmlText =txt;
					
					parentDocument.createUCSCLink(data.@idAnalysisFileString);
				}	
			}

		} 


        override public function set data(value:Object):void{ 
                super.data = value; 
                //columnIndex = (DataGridListData(listData) as DataGridListData).columnIndex; 
        } 
        override protected function updateDisplayList(w:Number, h:Number):void
		{
			super.updateDisplayList(w, h);
			if (data != null) {
				if (data.hasOwnProperty("@UCSCViewer") && data.@UCSCViewer == 'Y') {
					visible = true;
				} else {
					visible = false;
				}
				
			}
		}
     ]]> 
    </mx:Script> 
</mx:LinkButton> 
