<?xml version="1.0" encoding="utf-8"?>
<mx:VBox styleName="panelBox"   xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="100%" height="100%" 
	xmlns:util="views.util.*"
	xmlns:experiment="views.experiment.*" >
<mx:VBox width="100%" verticalGap="8">
	<mx:HBox width="100%" horizontalGap="1">
		<mx:Image source="{detail.selectedExperiment.@icon}"/>
		<mx:Label id="titleLabel" styleName="titleLabel" />
		<mx:Text width="100%" text="{detail.selectedExperiment.@name}" paddingLeft="8"/>
		<mx:HBox verticalGap="0" horizontalGap="0" paddingLeft="8">
			<mx:Label text="Last modified on" visible="{detail.selectedExperiment.@lastModifyDate != ''}"/>
			<mx:Text  text="{detail.selectedExperiment.@lastModifyDate}"/>
		</mx:HBox>
		
	</mx:HBox>
	
	
	<mx:HBox width="100%"  horizontalGap="0" horizontalAlign="left">
			<mx:LinkButton label="Edit" fontSize="9" click="detail.showEditExperimentWindow()" icon="@Embed(source='../../assets/tag_blue_edit.png')" textDecoration="underline" id="editButton" textAlign="left" paddingLeft="0">
				<mx:height>{detail.selectedExperiment.@canUpdate == &quot;Y&quot; ? 22 : 0}</mx:height>
				<mx:visible>{detail.selectedExperiment.@canUpdate == &quot;Y&quot; ? true : false}</mx:visible>
			</mx:LinkButton>
			<mx:LinkButton label="Downloads" fontSize="9" click="detail.showDownloads()" icon="@Embed(source='../../assets/download.png')" id="downloadExperimentButton" textDecoration="underline" textAlign="left"/>
			<mx:LinkButton label="Printable form" fontSize="9" click="detail.showPrintableRequestForm()" icon="@Embed(source='../../assets/page.png')" id="requestFormButton" textDecoration="underline" textAlign="left"/>
			<mx:LinkButton label="Analysis" fontSize="9" icon="@Embed(source='../../assets/map.png')" textDecoration="underline" 
						   enabled="false" disabledIcon="@Embed(source='../../assets/map_disable.png')" height="21" id="analysisButton" click="detail.showRelatedAnalysis()" textAlign="left">
			</mx:LinkButton>
			<mx:LinkButton  fontSize="9" label="{detail.selectedExperiment.@codeRequestCategory == 'SOLEXA' ? 'To HiSeq' : 'To GAIIx'}"  visible="{parentApplication.isAdminState &amp;&amp; (detail.selectedExperiment.@codeRequestCategory == 'SOLEXA' || detail.selectedExperiment.@codeRequestCategory == 'HISEQ')}"  icon="{detail.selectedExperiment.@codeRequestCategory == 'SOLEXA' ? parentApplication.iconHiSeq : parentApplication.iconSolexa}" click="{detail.showConvertIlluminaRequest()}" textDecoration="underline"  textAlign="left">    	        
			</mx:LinkButton>
			<mx:LinkButton label="Upload files"  fontSize="9" visible="{detail.selectedExperiment.@isExternal == 'Y'  &amp;&amp; detail.selectedExperiment.@canUpdate == 'Y'}" click="{ExperimentEditView.showExperimentUploadWindow(DisplayObject(parentApplication.theBody), detail.selectedExperiment.@idRequest, detail.selectedExperiment.@number)}" id="linkbuttonUpload" icon="@Embed(source='../../assets/upload.png')" paddingLeft="0" textDecoration="underline" textAlign="left"/>
			<mx:LinkButton label="FDT Upload files"  fontSize="9" visible="{detail.selectedExperiment.@isExternal == 'Y' &amp;&amp; parentApplication.isFDTSupported  &amp;&amp; detail.selectedExperiment.@canUpdate == 'Y'}" click="{ExperimentEditView.showExperimentUploadFDTWindow(DisplayObject(parentApplication.theBody), detail.selectedExperiment.@idRequest, detail.selectedExperiment.@number)}" id="linkbuttonFDTUpload" icon="@Embed(source='../../assets/upload_large.png')" paddingLeft="0" textDecoration="underline" textAlign="left"/>
			<mx:LinkButton label="Organize files" fontSize="9" visible="{detail.selectedExperiment.@isExternal == 'Y' &amp;&amp; detail.selectedExperiment.@canUpdate == 'Y'}" click="{ExperimentEditView.showExperimentOrganizeWindow(DisplayObject(parentApplication.theBody), detail.selectedExperiment.@idRequest, detail.selectedExperiment.@number)}" id="linkbuttonOrganize" icon="@Embed(source='../../assets/chart_organisation.png')" textDecoration="underline" textAlign="left"/>
	</mx:HBox>

</mx:VBox>

<mx:VBox width="100%" height="100%">
	 <experiment:ExperimentDetailView id="detail" width="100%" height="100%">
  	</experiment:ExperimentDetailView>
 	
</mx:VBox> 
  

</mx:VBox>
