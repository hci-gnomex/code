<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="vertical" width="800" height="500" 
	xmlns:views="views.*" 
	xmlns:experiment="views.experiment.*"
	xmlns:util="views.util.*"
	showCloseButton="true" 
	close="closeWindow()" 
	title="New Project" 
	
>
<mx:Script>
	<![CDATA[
		import mx.managers.PopUpManager;
		
		public function closeWindow():void {
			PopUpManager.removePopUp(this);
		}
            
	]]>
</mx:Script>
	<mx:VBox width="100%" height="100%" styleName="form" paddingTop="4" paddingLeft="4" paddingRight="4" >
		<mx:ComboBox id="labCombo" 
		 labelField="@name"
		 dataProvider="{parentApplication.submitRequestLabList}"
		 visible="true" width="220">
		</mx:ComboBox>
		
		<experiment:ProjectDetailView id="projectDetailView">
		</experiment:ProjectDetailView>
		

		
	</mx:VBox>

	<mx:ControlBar width="100%" horizontalAlign="right">
	    <util:DirtyNote id="dirtyProject"/>
		<mx:Button id="saveProjectButton" label="Save" 
			icon="@Embed('../../assets/action_save.gif')" 
			click="projectDetailView.addProject()"
			toolTip="Save project">
		 </mx:Button>
		<mx:Button id="cancelButton" label="Cancel" 
			 click="closeWindow()">
		 </mx:Button>
	</mx:ControlBar>
	
</mx:TitleWindow>
