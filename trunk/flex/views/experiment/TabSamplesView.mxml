		public function populateSampleSheetFields(event:PopulateSampleSheetFieldsEvent):void {
			this.systemManager.removeEventListener("PopulateSampleSheetFieldsEvent", populateSampleSheetFields);  
			var currentArray:Array = event.sampleNameArray;
			
			// Populate the sample name fields
			for (var i:String in currentArray)
			{
				if(i < parentDocument.samples.length) {
					parentDocument.samples[i].@name = currentArray[i];
				}
			}
			
			// Populate the sample concentration fields
			currentArray = event.sampleConcentrationArray;
			for (i in currentArray)
			{
				if(i < parentDocument.samples.length) {
					parentDocument.samples[i].@concentration = currentArray[i];
				}
			}
			
			// Populate the sample description fields
			currentArray = event.sampleDescriptionArray;
			for (i in currentArray)
			{
				if(i < parentDocument.samples.length) {
					parentDocument.samples[i].@description = currentArray[i];
				}
			}
			
			// Populate the CC Number fields
			currentArray = event.sampleCCNumberArray;
			for (i in currentArray)
			{
				if(i < parentDocument.samples.length) {
					parentDocument.samples[i].@ccNumber = currentArray[i];
				}
			}
			checkSamplesCompleteness();
		}
						
