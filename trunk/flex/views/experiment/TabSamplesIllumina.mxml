				this.customBarcodeColumn.editable = !parentDocument.isEditState() || parentApplication.hasPermission('canWriteAnyObject');
				this.customBarcodeColumnB.visible = parentDocument.showSampleCustomBarcodes();
				this.customBarcodeColumnB.editable = !parentDocument.isEditState() || parentApplication.hasPermission('canWriteAnyObject');
				
				this.samplesGrid.validateNow();
