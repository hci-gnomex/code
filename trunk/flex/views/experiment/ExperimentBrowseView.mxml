					<mx:LinkButton label="Download - Fast Data Transfer" textDecoration="underline" click="{this.showFastDataTransferDownloadPage()}" icon="@Embed(source='../../assets/download_large.png')"/>
		            <mx:VBox styleName="hintBox">
			            <mx:LinkButton  label="having trouble downloading?" textDecoration="underline" click="showDownloadHints()" styleName="hintLink" icon="@Embed(source='../../assets/information.png')"/>		            	
		            </mx:VBox>
	            </mx:HBox>		                    
	        </mx:ViewStack>
		</mx:HBox>
	</mx:ControlBar>
	

</mx:VBox>



