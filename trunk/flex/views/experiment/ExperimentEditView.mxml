	        appUsers.sort = appUserSort;
	        appUsers.refresh();
	        
	        if (this.currentState == "AdminState") {
		        this.appUserCombo.selectedIndex = 0;
	        } else {
	        	for each(var u:Object in appUsers) {
	        		if (u.@idAppUser == parentApplication.getIdAppUser()) {
			        	this.appUserCombo.selectedItem = u;
	    				break;    			
	        		}
	        	}
	        }
