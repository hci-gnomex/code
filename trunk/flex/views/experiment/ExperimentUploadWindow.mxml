							continue;
						} else{
							if(file.hasOwnProperty("@idExperimentFile")){
								filesToUnlink.addItem(file.copy());
							}
							var fileName:String = file.@fileName; 
							fileName = fileName.substring(fileName.indexOf(request.@number));
