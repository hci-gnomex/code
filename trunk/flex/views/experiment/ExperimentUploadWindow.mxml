								if(filePart == dl.@itemNumber || filePart == dl.@displayName){
									node = dl.copy();
									break;
								}
							}
							for each(var expFile:XML in experimentFileList.children()){
								if(expFile.@itemNumber == filePart){
									deleteNode(expFile);
									break;
								}
							}
							if(node != null){
								experimentFileList.source.appendChild(node);
							}
							
							for each(var f:XML in sampleList.children().children()){
								if(f.@displayName == file.@displayName){
									deleteNode(f);
									break;
								}
							}
							for each(var ef:XML in experimentFileList.children().children()){
								for each(var sf:XML in sampleList.children().children()){
									if(sf.@displayName == ef.@displayName){
										deleteNode(ef);
										break;
									}
								}
							}
							for each(var fd:XML in experimentFileList.children().children()){
								deleteEmptyFolders(fd);	
							}
						}
					}
					
					for each(var emptyfolder:XML in sampleList.children()){
						if(emptyfolder.children().length() == 0){
							deleteNode(emptyfolder);
						}
					}
					clickedItems = new XMLListCollection();
					callLater(samplesTree.invalidateDisplayList);
					this.dirty.setDirty();
					event.target.hideDropFeedback(event);
				}
				
