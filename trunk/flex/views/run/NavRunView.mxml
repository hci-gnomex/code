<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"     
		   label="Run" width="100%" height="100%" 
		   xmlns:views="views.*" 
		   xmlns:run="views.run.*"
		   xmlns:util="views.util.*"
		   creationPolicy="all"  show="init()"
		   cornerRadius="10"  >
	
	
	
	<mx:Script> 
		<![CDATA[
			
			
			public function checkDirty():void {
			}
			
			private function init():void {
				if (theViews.selectedChild == browseView) {
					this.browseView.init();
				}
			}
			
			
			
			
		]]>
	</mx:Script> 
	
	
	<mx:DateFormatter id="dateFormatter" formatString="YYYYMMDD"/>
	
			
			
			<mx:ViewStack id="theViews" creationPolicy="all" visible="true" width="100%" height="100%">
				
				<run:RunBrowseView label="Run List" 
								   icon="@Embed('../../assets/run.png')"
								   id="browseView"  
								   width="100%" 
								   height="100%" 
								   parentView="{this}">
				</run:RunBrowseView>
				
				<mx:VBox label="Plate List" 
								   icon="@Embed('../../assets/plate.png')"
								   id="plateBrowseView"  
								   width="100%" 
								   height="100%"  >
				</mx:VBox>
				
			</mx:ViewStack>
			
			
		
	
	
</mx:Canvas>
