<?xml version="1.0" encoding="utf-8"?>
<mx:VBox  width="100%" height="100%" styleName="panelBox"
		  xmlns:mx="http://www.adobe.com/2006/mxml"     
		  xmlns:views="views.*" 
		  xmlns:util="views.util.*" 
		  xmlns:datatrack="views.datatrack.*" creationComplete="{checkTopicsVisibility()}"
		  showEffect="{parentApplication.fadeIn}" hideEffect="{parentApplication.fadeOut}">
	
	
	<mx:HBox horizontalGap="1" width="100%" verticalAlign="middle">
			<mx:Image source="{getDataTrack.lastResult.@codeVisibility == 'INST' ? parentApplication.iconDataTrackInstitution : (getDataTrack.lastResult.@codeVisibility == 'MEM' ? parentApplication.iconDataTrackMember : (getDataTrack.lastResult.@codeVisibility == 'MEMCOL' ? parentApplication.iconDataTrackMemberCollab : (getDataTrack.lastResult.@codeVisibility == 'OWNER' ? parentApplication.iconDataTrackOwner : parentApplication.iconDataTrackPublic)))}"/>
			<mx:Label id="titleLabel" styleName="titleLabel" text="{'Data Track ' + getDataTrack.lastResult.@number}" />
			<mx:LinkButton  label="UCSC Browser" 
						   icon="@Embed(source='../../assets/ucscFavicon.png')"
						   disabledIcon="@Embed(source='../../assets/ucscFaviconDeselected.png')"  					        	
						   toolTip="Create file link(s) for viewing the selected data track in the UCSC Genome Browser"
						   enabled="{parentDocument.browseTree.selectedItem != null &amp;&amp; parentDocument.browseTree.selectedItem.name() == 'DataTrack' &amp;&amp; dataTrackFiles.length !=0 &amp;&amp;  getDataTrack.lastResult.Files.Dir.@ucscLinkFile != 'none'}"  
						   click="{parentDocument.createUCSCLink()}" 
						   id="makeUCSCLinkButton"  paddingLeft="20" textDecoration="underline"/>
			<mx:LinkButton label="IGV Browser" 
						   icon="@Embed(source='../../assets/igv.png')"
						   disabledIcon="@Embed(source='../../assets/igv_disable.png')"  					        	
						   toolTip="Create file link(s) for viewing the selected data track in the IGV Genome Browser"
						   click="{parentDocument.createIGVLink()}" 
						   id="makeIGVLinkButton"  textDecoration="underline"/>
			<mx:LinkButton label="URL Links" 
						   icon="@Embed(source='../../assets/icon_link.gif')"
						   disabledIcon="@Embed(source='../../assets/icon_link_disable.gif')"  					        	
						   toolTip="Creates URL file link(s) for accessing the selected data tracks via HTTP"
						   enabled="{parentDocument.browseTree.selectedItem != null &amp;&amp; parentDocument.browseTree.selectedItem.name() == 'DataTrack' &amp;&amp;  dataTrackFiles.length !=0}"  
						   click="{parentDocument.createURLLinks()}" 
						   id="makeURLLinksButton"   textDecoration="underline"/>
			<mx:LinkButton label="Clear file links"
					       icon="@Embed(source='../../assets/link_delete.png')"
					       disabledIcon="@Embed(source='../../assets/link_delete_disable.png')"
					       toolTip="Destroys all existing IGV, UCSC and URL links to user-owned datatracks.  Re-created links will have different random paths, making tracks private if old paths were distributed."
					       click="{parentDocument.removeLinks()}"
					       id="destroyLinksButton" textDecoration="underline" />
			<mx:LinkButton styleName="linkMenuButton" label="Download" 
						   icon="@Embed(source='../../assets/download.png')" 
						   enabled="true" visible="false" includeInLayout="false"
						   click="{parentDocument.treeItemToSelect=null;promptToDownloadSelectedItems()}" id="downloadButton" />
			 
			<mx:LinkButton label="Share"  click="{showLinks();}" icon="@Embed(source='../../assets/globe_link.png')" id="shareWebLink" textDecoration="underline" textAlign="left"/>
			
	</mx:HBox>
	
<mx:HTTPService             
	id="getDataTrack" 
	url="GetDataTrack.gx"
	resultFormat="e4x"
	showBusyCursor="true"
	result="onGetDataTrack(event)"
	fault="parentApplication.onFailHttpRequest('Failed to get data track', event)"
	method="POST"
	useProxy="false">
	<mx:request>
	</mx:request>
</mx:HTTPService> 
	
<mx:HTTPService             
	id="saveDataTrack" 
	url="SaveDataTrack.gx"
	resultFormat="e4x"
	showBusyCursor="true"
	result="onSaveDataTrack(event)"
	fault="parentApplication.onFailHttpRequest('Failed to update data track', event)"
	method="POST"
	useProxy="false">
	<mx:request>
	</mx:request>
</mx:HTTPService>  
	
	
