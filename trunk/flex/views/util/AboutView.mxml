<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="vertical" width="886" height="550"  
	xmlns:views="views.*"
	showCloseButton="true" 
	close="{PopUpManager.removePopUp(this)}" 
	title="{'GNomEx ' + parentApplication.version }" 
	backgroundColor="#ffffff"  alpha="1.0" >
	<mx:VBox width="100%" verticalGap="8" height="100%" fontSize="10" paddingTop="2" paddingLeft="2" styleName="form" paddingRight="2" paddingBottom="2" backgroundImage="@Embed(source='../../assets/welcome_background.png')" backgroundSize="100%" borderStyle="none">
		<mx:HBox width="100%" horizontalAlign="center" id="hbox10" paddingTop="10" paddingBottom="10">
  			<mx:Image source="assets/gnomex_logo_small.png"/>
  		</mx:HBox>

		<mx:VBox width="100%" verticalGap="2" fontSize="12" paddingTop="10" paddingLeft="10">
			<mx:Text text="Functionality" fontWeight="bold" fontSize="14" paddingBottom="1"/>
			<mx:HBox horizontalGap="0" width="100%">
			    <mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="A LIMS for making and tracking requests for genomic analysis (e.g. Microarray hybridizations, massive parallel sequencing)"/>				
			</mx:HBox>
			<mx:HBox horizontalGap="0" width="100%">
			    <mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="Import of externally generated genomic datasets in their native formats (future)"/>				
			</mx:HBox>
			<mx:HBox horizontalGap="0" width="100%">
			    <mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="Entry and association of structured meta-data using MAGE ontologies for the samples and experimental parameters with the data"/>				
			</mx:HBox>
			<mx:HBox horizontalGap="0" width="100%">
			    <mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="Web tools to browse, search, modify, and download data fiels associated with the aforementioned"/>				
			</mx:HBox>
			
		</mx:VBox>
			
		<mx:VBox width="100%" verticalGap="1" fontSize="12" paddingLeft="10">		
			<mx:Text text="Contact Info" fontWeight="bold" fontSize="14" paddingBottom="1"/>
			<mx:HBox horizontalGap="0" width="100%" verticalAlign="middle">
			    <mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="To report software bugs or give feedback, please email" width="320"/>				
				<mx:LinkButton label="{parentApplication.getProperty(parentApplication.PROPERTY_CONTACT_EMAIL_SOFTWARE_BUGS)}" click="navigateToURL(new URLRequest('mailto:' + parentApplication.getProperty(parentApplication.PROPERTY_CONTACT_EMAIL_SOFTWARE)), '_blank');" textDecoration="underline" color="#0000ff"/>				
			</mx:HBox>
			<mx:HBox horizontalGap="0" width="100%" verticalAlign="middle">
			    <mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="To contact the Microarray Core Facility, please email" width="320"/>				
				<mx:LinkButton label="{parentApplication.getProperty(parentApplication.PROPERTY_CONTACT_EMAIL_CORE_FACILITY)}" click="navigateToURL(new URLRequest('mailto:' + parentApplication.getProperty(parentApplication.PROPERTY_CONTACT_EMAIL_CORE_FACILITY)), '_blank');" textDecoration="underline" color="#0000ff"/>				
			</mx:HBox>
		</mx:VBox>

		<mx:VBox width="100%" verticalGap="1" fontSize="12" paddingLeft="10">
			<mx:Text text="Credits" fontWeight="bold" fontSize="14" paddingBottom="1"/>
			<mx:HBox horizontalGap="0" width="100%" verticalAlign="middle">
			    <mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="GNomEx was developed by Hunstman Cancer Institute Informatics and designed in conjuction with the Microarray Core Facility and the Microarray Bioinformatics Group." width="100%"/>
			</mx:HBox>
			<mx:HBox horizontalGap="0"  verticalAlign="middle" width="100%">
			    <mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="Application icons by"/>
				<mx:LinkButton label="FamFamFam Silk Icons" click="navigateToURL(new URLRequest('http://www.famfamfam.com/lab/icons/silk/'), '_blank');" textDecoration="underline" color="#0000ff"/>
			</mx:HBox>
			<mx:HBox horizontalGap="0"  verticalAlign="middle" width="100%">
				<mx:Image source="{parentApplication.iconBullet}"/>
				<mx:Text text="Finch TV is available through Geospiza and can be downloaded at"/>
				<mx:LinkButton label="http://www.geospiza.com/ftvdlinfo.html" click="navigateToURL(new URLRequest('http://www.geospiza.com/ftvdlinfo.html'), '_blank');" textDecoration="underline" color="#0000ff"/>
			</mx:HBox>
		</mx:VBox>
		
		<mx:HBox width="100%" verticalAlign="middle" horizontalAlign="center" horizontalGap="60" paddingTop="20">
			<mx:Image source="assets/hciLogo.png"/>
			<mx:Image source="assets/hcsLogoTransparent.gif"/>
		</mx:HBox>
	</mx:VBox>
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
		]]>
	</mx:Script>
</mx:TitleWindow>
